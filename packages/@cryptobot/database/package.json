{
  "name": "@cryptobot/database",
  "version": "1.0.0",
  "description": "Database layer with Prisma ORM for CryptoBot",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/seed.ts"
  },
  "dependencies": {
    "@cryptobot/types": "workspace:*",
    "@prisma/client": "^5.8.1",
    "decimal.js": "^10.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "prisma": "^5.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "prisma/schema.prisma"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}