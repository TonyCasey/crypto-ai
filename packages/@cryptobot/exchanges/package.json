{
  "name": "@cryptobot/exchanges",
  "version": "1.0.0",
  "description": "Exchange connectors and integrations for CryptoBot",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "cd ../../../ && npx jest --testPathPattern=\"packages/@cryptobot/exchanges\"",
    "test:watch": "cd ../../../ && npx jest --watch --testPathPattern=\"packages/@cryptobot/exchanges\"",
    "test:coverage": "cd ../../../ && npx jest --coverage --testPathPattern=\"packages/@cryptobot/exchanges\""
  },
  "dependencies": {
    "@cryptobot/types": "file:../types",
    "axios": "^1.6.5",
    "ws": "^8.16.0",
    "crypto": "^1.0.1",
    "querystring": "^0.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/ws": "^8.5.10",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}