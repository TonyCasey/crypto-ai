# Environment
NODE_ENV=development

# Server
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database"
DIRECT_URL="postgresql://username:password@host:port/database"

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-key-here

# Trading Configuration
PAPER_TRADING=true
MAX_DAILY_TRADES=50
EMERGENCY_STOP_LOSS=0.10

# Exchange API Keys (if not using simulator)
# Coinbase Pro
COINBASE_PRO_API_KEY=your-coinbase-api-key
COINBASE_PRO_API_SECRET=your-coinbase-api-secret
COINBASE_PRO_PASSPHRASE=your-coinbase-passphrase
COINBASE_PRO_SANDBOX=true

# Binance (future implementation)
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000