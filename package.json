{
  "name": "crypto-ai-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Cryptocurrency AI Trading Platform - Node.js Monorepo",
  "workspaces": [
    "frontend",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev --filter=backend\" \"pnpm run dev --filter=frontend\"",
    "dev:backend": "pnpm run dev --filter=backend",
    "dev:frontend": "pnpm run dev --filter=frontend",
    "build": "pnpm run build:packages && pnpm run build:backend && pnpm run build:frontend",
    "build:packages": "pnpm run build --filter=@cryptobot/types && pnpm run build --filter=@cryptobot/database && pnpm run build --filter=@cryptobot/indicators && pnpm run build --filter=@cryptobot/exchanges && pnpm run build --filter=@cryptobot/trading",
    "build:backend": "pnpm run build --filter=backend",
    "build:frontend": "pnpm run build --filter=frontend",
    "test": "pnpm run test --recursive",
    "lint": "pnpm run lint --recursive",
    "typecheck": "pnpm run typecheck --recursive",
    "clean": "pnpm run clean --recursive && rimraf node_modules",
    "postinstall": "pnpm run build:packages"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TonyCasey/crypto-ai.git"
  },
  "author": "Tony Casey",
  "license": "MIT"
}